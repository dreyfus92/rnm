{
  "name": "rnm",
  "version": "0.1.0",
  "description": "Interactive batch file renamer CLI",
  "type": "module",
  "main": "./dist/cli.mjs",
  "types": "./dist/cli.d.mts",
  "exports": {
    ".": {
      "types": "./dist/cli.d.mts",
      "import": "./dist/cli.mjs"
    }
  },
  "bin": {
    "rnm": "./dist/cli.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "prepack": "pnpm run build"
  },
  "dependencies": {
    "@bomb.sh/args": "^0.3.1",
    "@clack/prompts": "^1.0.0",
    "picocolors": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsdown": "^0.20.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=20.19"
  },
  "pnpm": {
    "overrides": {
      "@clack/prompts": "1.0.0"
    }
  }
}